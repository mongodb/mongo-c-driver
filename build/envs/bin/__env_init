#!/usr/bin/env sh

set -eu

__add_boolcmd __is_debian_based $(__boolstr __test is-file /etc/debian_version)
__add_boolcmd __is_redhat_based $(__boolstr __test is-file /etc/redhat-release)
__add_boolcmd __is_centos $(__boolstr __test is-file /etc/centos-release)
__add_boolcmd __is_rockylinux $(__boolstr __test is-file /etc/rocky-release)
__add_boolcmd __is_amazonlinux $(__boolstr __test have-command amazon-linux-extras)
__add_boolcmd __is_debian $(__boolstr grep "ID=debian" /etc/os-release)
__add_boolcmd __is_ubuntu $(__boolstr grep "ID=ubuntu" /etc/os-release)
__add_boolcmd __is_suse $(__boolstr grep "opensuse" /etc/os-release)
__add_boolcmd __is_alpine $(__boolstr __test is-file /etc/alpine-release)
__add_boolcmd __is_archlinux $(__boolstr __test is-file /etc/arch-release)
